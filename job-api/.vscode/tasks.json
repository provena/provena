{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pylint: whole project",
            "type": "shell",
            "command": ".venv/bin/python -m pylint --ignore=.venv,.mypy_cache,.pytest_cache --errors-only --msg-template \"{path}:{line}:{column}:{category}:{symbol} - {msg}\" --ignore-patterns \"\" --recursive y ${workspaceFolder}",
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "python",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+):(\\w+):(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}
