{
    "explorer.compactFolders": false,
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.autoIndent": "full",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "editor.insertSpaces": true,
    "cSpell.words": ["authorised", "orcid", "rocrate", "Unauthorised"],
    "search.exclude": {
        "package-lock.json": true,
        "yarn.lock": true
    },
    "workbench.editor.enablePreview": false,
    "editor.tabSize": 2,
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[javascriptreact]": {
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.tabSize": 4
    },
    "prettier.tabWidth": 2,
}
